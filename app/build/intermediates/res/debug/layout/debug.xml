<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titre (=nom d'article)"
            android:id="@+id/lblTitle" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NumÃ©ro d'article"
            android:id="@+id/lblArtNumber" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Auteur"
            android:id="@+id/lblAuthor" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtParam1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ISBN"
            android:id="@+id/lblISBN" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtParam2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Prix"
            android:id="@+id/lblPrice" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtParam3" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewDebug"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true" >

        <TextView
            android:id="@+id/outputzone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:text=""
            android:textStyle="bold"
            android:textSize="24sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/debugAction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction1" />

        <Button
            android:id="@+id/debugAction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction2" />

        <Button
            android:id="@+id/debugAction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction3" />

        <Button
            android:id="@+id/debugAction4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction4" />

        <Button
            android:id="@+id/debugAction5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction5" />

        <Button
            android:id="@+id/debugAction6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debugAction6" />

    </LinearLayout>

</LinearLayout>
